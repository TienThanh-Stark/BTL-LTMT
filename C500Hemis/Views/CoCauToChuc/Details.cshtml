@model C500Hemis.Models.TbCoCauToChuc

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
        }

        .container {
            padding: 32px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 750px;
            width: 100%;
            margin: auto;
            background-color: white;
            margin-top: 20px;
            height: 100%;
        }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: black;
            text-align: center;
        }

        .cen {
            text-align: center;
            margin-top: 100px;
        }

        .custom-btn {
            width: 40%;
            padding: 10px;
            background-color: steelblue;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
        }

            .custom-btn:hover {
                background-color: #A1D8EC; /* Màu khi hover */
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
                transform: scale(1.05);
            }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #A1D8EC;
            }

        .btn-back {
            color: darkred;
            background: #c9d6e3;
        }

            .btn-back:hover {
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
                transform: scale(1.05);
                background: #b1b7bd;
            }

            .btn-back:active {
                font-weight: bolder;
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
            }

        .btn i {
            margin-right: 5px;
        }

        .combo-button {
            display: flex; /* Đặt 2 button trên 1 trục ngang từ trái sang phải */
            justify-content: space-around;
            margin-bottom: 20px;
        }
    </style>
</head>

<h5>CƠ SỞ GIÁO DỤC</h5>
<div style="text-align: center">
    <h1>THÔNG TIN CHI TIẾT</h1>
    <h6>Cơ Cấu Tổ Chức</h6>
</div>
<div class="container">
    <div class="row mb-3">
        <label asp-for="MaPhongBanDonVi" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.MaPhongBanDonVi)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.MaPhongBanDonVi)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="MaPhongBanDonViCha" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.MaPhongBanDonViCha)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.MaPhongBanDonViCha)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="TenPhongBanDonVi" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.TenPhongBanDonVi)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.TenPhongBanDonVi)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="SoQuyetDinhThanhLap" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.SoQuyetDinhThanhLap)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.SoQuyetDinhThanhLap)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="NgayRaQuyetDinh" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.NgayRaQuyetDinh)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.NgayRaQuyetDinh)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="IdLoaiPhongBanNavigation" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.IdLoaiPhongBanNavigation)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdLoaiPhongBanNavigation.LoaiPhongBan)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="IdTrangThaiNavigation" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.IdTrangThaiNavigation)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdTrangThaiNavigation.TrangThaiCoSoGd)" readonly>
        </div>
    </div>
    <div class="combo-button cen">
        <a asp-action="Edit" asp-route-id="@Model?.IdCoCauToChuc" class="custom-btn ">CHỈNH SỬA THÔNG TIN</a>
        <a asp-action="Index" class="btn btn-back"><i class="fa-solid fa-circle-arrow-left"></i>QUAY LẠI DANH SÁCH</a>
    </div>
</div>