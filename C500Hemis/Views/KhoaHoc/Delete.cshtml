@model C500Hemis.Models.TbKhoaHoc

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #fff9e9;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #f5f5f5;
            margin-top: 20px;
        }

        .info-table {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
        }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            color: black;
            text-align: center;
        }

        .cen {
            text-align: center;
        }

        input[type="text"] {
            background: #e9ecef;
        }

        input[type="submit"] {
            width: 10%;
            padding: 10px;
            background-color: #EE2C2C;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #FF6A6A;
            }

        .chung {
            display: block;
            width: 200%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            border-radius: 0.375rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
    </style>
</head>

<h5>CƠ SỞ GIÁO DỤC</h5>
<div style="text-align: center">
    <h1 style>BẠN CÓ CHẮC MUỐN XÓA</h1>
    <h6>Khoa Học</h6>
</div>

<div class="container">
    <div class="info-table">
        <h4>Thông Tin Khoa Học</h4>
        <hr />

        <div class="form-group">
            <label asp-for="TuNam" class="control-label"><b>Từ Năm</b></label>
            <div class="col-sm-6">
                <input type="text" class="chung" value="@Html.DisplayFor(model => model.TuNam)" readonly>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DenNam" class="control-label"><b>Đến năm</b></label>
            <div class="col-sm-6">
                <input type="text" class="chung" value="@Html.DisplayFor(model => model.DenNam)" readonly>
            </div>
        </div>
      
            <form asp-action="Delete" class="cen" style="margin-top:10px;">
                <input type="hidden" asp-for="IdKhoaHoc" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </form>
            <div style=" text-align:center; ">
                <a asp-action="Index" class="btn btn-back" style="margin-bottom:10px; color:forestgreen; padding:10px; font-size:20px; ">
                    <i class="fa-solid fa-circle-arrow-left"></i>Quay lại danh sách
                </a>
            </div>
        </div>

